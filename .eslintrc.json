{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["error", "none"],
        "quotes": ["error", "double"]
    },
    "overrides": {
        "files": ["*-test.js", "*.spec.js"],
        "rules": {
            "no-unused-expressions": "off"
        }
    }
}
